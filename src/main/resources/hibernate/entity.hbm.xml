<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
    
<!-- of the basic data of an entity with all its subtypes (no revisioning tables) -->
<!-- this currently only maps entity and product -->
<hibernate-mapping package="org.tagaprice.core.entities">

    <class name="Entity" table="entity">
	    <id name="id" column="ent_id">
	        <generator class="native"/>
	    </id>
	    
	    <!-- TODO check if constrained="true" is needed -->
	    <!-- <one-to-one 
	    	name="currentRevision"
	    	class="EntityRevision"
	    />-->

		<property name="currentRevisionNumber" column="current_revision" />
	    <property name="createdAt" column="created_at"/>
	    <many-to-one name="locale" column="locale_id"/>
	
<!-- subclass Product -->
		<joined-subclass name="Product" table="product">
	        <key column="prod_id"/>
	    </joined-subclass>
	    	
	</class>
	
</hibernate-mapping>