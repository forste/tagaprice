<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
    
<!-- of the basic data of an entity with all its subtypes (no revisioning tables) -->
<!-- this currently only maps entity and product -->
<hibernate-mapping package="org.tagaprice.core.entities">

    <class name="Locale" table="locale">
	    <id name="id" column="locale_id">
	        <generator class="native"/>
	    </id>
	    
	    <many-to-one name="fallback" class="Locale" column="fallback_id" cascade="none"/> <!-- TODO fix cascade --> 
	    
	    <property name="title" column="title" />
	    <property name="localTitle" column="localtitle" />
	    <property name="createdAt" column="created_at" />

	</class>
	
</hibernate-mapping>

